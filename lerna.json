{
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ]
    },
    "version": {
      "allowBranch": [
        "master",
        "release/*"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
