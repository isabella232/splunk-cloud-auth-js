{
  "command": {
    "publish": {
      "registry": "https://repo.splunk.com/artifactory/api/npm/npm-solutions-local",
      "ignoreChanges": [
        "*.md",
        "@splunkdev/cloud-auth"
      ]
    },
    "version": {
      "allowBranch": [
        "master",
        "release/*"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
