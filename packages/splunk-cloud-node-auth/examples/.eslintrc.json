{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "@splunk/eslint-config/browser-prettier",
    "plugin:unicorn/recommended"
  ],
  "overrides": [
    {
      "files": [
        "examples/**/*.js"
      ]
    }
  ],
  "root": true,
  "rules": {
    "func-names": "off",
    "max-classes-per-file": "off",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "unicorn/filename-case": [
      "error",
      {
        "case": "kebabCase"
      }
    ],
    "unicorn/prevent-abbreviations": "off"
  }
}
