{
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "lcov",
    "text-summary",
    "text",
    "html"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.test.json"
    }
  },
  "moduleNameMapper": {},
  "preset": "ts-jest",
  "reporters": [
    "default",
    "jest-junit"
  ],
  "restoreMocks": true,
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/test/**/*.unit.ts"
  ],
  "testPathIgnorePatterns": [],
  "transform": {
    ".*": "babel-jest"
  }
}
